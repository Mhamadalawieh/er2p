        <div id="list-solutions">
            <div class="solution-block" style="border-color: #DD3953;">
                <div class="solution-title" style="color: #DD3953;">{{ text.global.solution1 }}</div>
                <div class="solution-body">{{ text.redDescription|nl2br }}</div>
                <a href="/produit/1"><i class="fas fa-arrow-alt-circle-right solution-btn" style="color: #DD3953;"></i></a>
            </div>

            <div class="solution-block" style="border-color: #4785D5;">
                <div class="solution-title" style="color: #4785D5;">{{ text.global.solution2 }}</div>
                <div class="solution-body">{{ text.blueDescription|nl2br }}</div>
                <a href="/produit/2"><i class="fas fa-arrow-alt-circle-right solution-btn" style="color: #4785D5;"></i></a>
            </div>

            <div class="solution-block" style="border-color: #d4b971;">
                <div class="solution-title" style="color: #d4b971;">{{ text.global.solution3 }}</div>
                <div class="solution-body">{{ text.yellowDescription|nl2br }}</div>
                <a href="/produit/3"><i class="fas fa-arrow-alt-circle-right solution-btn" style="color: #d4b971;"></i></a>
            </div>

            <div class="solution-block" style="border-color: #75b352;">
                <div class="solution-title" style="color: #75b352;">{{ text.global.solution4 }}</div>
                <div class="solution-body">{{ text.greenDescription|nl2br }}</div>

    <div id="bottom" class="col-center">
        <img id="revertGradient" class="noselect" src="/images/gradient2.png">

        <div id="body-bottom" class="page-size-col">

            <div id="map-block">
                <img {{ image['mapFrance']['src'] }} alt="Carte de la France" id="map">
                <div id="text-map-block">
                    <div id="title-map">{{ text.titleMap }}</div>
                    <div id="text-map">{{ text.textMap|nl2br }}</div>
                </div>
            </div>

            <div class="bottom-title">Dernières actualités :</div>
            <div id="news-list">
                {% for new in news %}
                    <div class="actuality-block">
                        <div class="img-actuality" style="background-image: url('/images/{{ new.path }}')"></div>
                        <div class="actu-content">
                            <div class="actu-title">{{ new.title }}</div>
                            <div class="actu-description" id="test">
                                {{ new.description|nl2br }}
                            </div>
                        </div>
                        <div class="date-actuality">{{ new.created_at|date('d/m/Y') }}</div>
                    </div>
                {% endfor %}
            </div>

            <div id="thumb-block">
                <div id="text-thumb-block">
                    <div id="title-thumb">{{ text.aboutUsTitle }}</div>
                    <div id="text-thumb">{{ text.aboutUsText|nl2br }}</div>
                </div>
                <img {{ image['aboutUs']['src'] }} alt="Pouce" id="thumb">
            </div>


        </div>
    </div>
